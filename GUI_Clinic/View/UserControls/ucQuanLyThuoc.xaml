                                HorizontalAlignment="Left"
                                Margin="150 5 5 5">
                            <materialDesign:PackIcon Kind="Search" Height="24" Width="24" />
                        </Button>-->
                    </Grid>

                    <GroupBox Grid.Row="1"
                              Header="Phiếu nhập thuốc" 
                              Margin="0 0 0 5"
                              Style="{DynamicResource MaterialDesignCardGroupBox}">
                        <ListView ItemsSource="{Binding ListPNT}"
                                  SelectedItem="{Binding SlectedItem, Mode=TwoWay}"
                                  x:Name="lvPhieuNhapThuoc"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Mã phiếu nhập" 
                                                    DisplayMemberBinding="{Binding Id}"/>
                                    <GridViewColumn Header="Ngày nhập" 
                                                    DisplayMemberBinding="{Binding NgayNhap}"/>
                                    <GridViewColumn Header="Tổng tiền" 
                                                    DisplayMemberBinding="{Binding TongTien}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                    <GroupBox Grid.Row="2"
                              Header="Chi tiết phiếu nhập thuốc" 
                              Margin="0 0 0 5"
                              Style="{DynamicResource MaterialDesignCardGroupBox}">
                        <ListView ItemsSource="{Binding List}"
                                  SelectedItem="{Binding SlectedItem, Mode=TwoWay}"
                                  x:Name="lstMedicationEntryDetail"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn 
                                        Header="STT" 
                                        DisplayMemberBinding="{Binding DisplayName}"/>
                                    <GridViewColumn
                                        Header="Thuốc"
                                        DisplayMemberBinding="{Binding Unit.DisplayName}"/>
                                    <GridViewColumn 
                                        Header="Đơn vị"
                                        DisplayMemberBinding="{Binding Price}"/>
                                    <GridViewColumn 
                                        Header="Số lượng"
                                        DisplayMemberBinding="{Binding Price}"/>
                                    <GridViewColumn 
                                        Header="Đơn giá" 
                                        DisplayMemberBinding="{Binding Price}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                </Grid>
            </materialDesign:Card>
        </Grid>
