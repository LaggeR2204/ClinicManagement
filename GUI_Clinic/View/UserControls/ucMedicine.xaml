<UserControl x:Class="GUI_Clinic.View.UserControls.ucMedicine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_Clinic.View.UserControls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             DataContext="{StaticResource MedicineVM}"
             Name="uc_Medicine">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock x:Name="tblTitle" Margin="20 10" HorizontalAlignment="Left" Text="Quản lý thuốc" VerticalAlignment="Center" FontSize="35" FontWeight="Bold" Foreground="#0078D7"/>
        </Grid>

        <Grid Grid.Row="1">
            <materialDesign:Card Grid.Row="0" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="tblMedicationFind" Text="Tìm kiếm" FontWeight="Bold" FontSize="20" Margin="15 5 5 5" Foreground="Gray"/>

                    <WrapPanel Grid.Row="1" Margin="0 0 0 10">
                        <TextBox x:Name="tbxMedicationFindContent" Margin="15 5 15 3" materialDesign:HintAssist.Hint="Tên thuốc cần tìm" VerticalAlignment="Center" MinWidth="100"/>
                        <Button x:Name="btnMedicationFind" Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                                ToolTip="Tìm kiếm"
                                Background="#0078D7"
                                BorderBrush="#0078D7"
                                Width="40"
                                Height="40"
                                Margin="5 5 5 0">
                            <materialDesign:PackIcon Kind="Search" Height="24" Width="24" />
                        </Button>
                    </WrapPanel>

                    <materialDesign:Chip Command="{Binding AddMedicineCommand}"
                                     x:Name="chpMedicationEntry"
                                     Grid.Row="1"
                                     HorizontalAlignment="Right"
                                     Content="Nhập thuốc"
                                     ToolTip="Lập phiếu nhập thuốc"
                                     Foreground="White"
                                     IconBackground="{DynamicResource PrimaryHueDarkBrush}"
                                     IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                     Background="Gray"
                                     Margin="0 0 139 0">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="Plus"></materialDesign:PackIcon>
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>

                    <materialDesign:Chip Command="{Binding MedicationEntryListCommand}"
                                     x:Name="chpMedicationEntryHistory"
                                     Grid.Row="1"
                                     HorizontalAlignment="Right"
                                     Content="Lịch sử nhập"
                                     ToolTip="Xem lịch sử nhâp thuốc"
                                     Foreground="White"
                                     IconBackground="{DynamicResource PrimaryHueDarkBrush}"
                                     IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                     Background="Gray"
                                     Margin="0 0 5 0">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="History"></materialDesign:PackIcon>
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>

                    <materialDesign:Chip Command="{Binding MedicineReportCommand}"
                                     CommandParameter="{Binding ElementName=uc_Medicine}"
                                     x:Name="chpMedicationReport"
                                     Grid.Row="1"
                                     HorizontalAlignment="Right"
                                     Content="Báo cáo"
                                     ToolTip="Lập báo cáo sử dụng thuốc"
                                     Foreground="White"
                                     IconBackground="{DynamicResource PrimaryHueDarkBrush}"
                                     IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                     Background="Gray"
                                     Margin="0 0 269 0">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="Note"></materialDesign:PackIcon>
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <!--<Grid.RowDefinitions>
            -->
        <!--<RowDefinition Height="auto"/>-->
        <!--
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>-->

        <!--Cac element binding tu selected item-->
