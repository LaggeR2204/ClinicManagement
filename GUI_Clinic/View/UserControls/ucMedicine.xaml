                    <Grid Grid.Row="1">
                        <GroupBox Header="Thuốc trong kho"
                                  Style="{DynamicResource MaterialDesignCardGroupBox}">
                            <ListView ItemsSource="{Binding List}"
                                  SelectedItem="{Binding SlectedItem, Mode=OneWayToSource}"
                                  x:Name="lstMedicine"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"></GridViewColumn>
                                        <GridViewColumn Header="Tên thuốc" DisplayMemberBinding="{Binding DisplayName}"></GridViewColumn>
                                        <GridViewColumn Header="Đơn vị tính" DisplayMemberBinding="{Binding Unit.DisplayName}"></GridViewColumn>
                                        <GridViewColumn Header="Công dụng" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                                        <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                                        <GridViewColumn Header="Giá" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBox Margin="10 5 0 5" 
                                 materialDesign:HintAssist.Hint="Tìm phiếu nhập thuốc" 
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center" 
                                 Width="130"/>
                        <Button Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                                ToolTip="Tìm"
                                Background="#0078D7"
                                BorderBrush="#0078D7"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Left"
                                Margin="150 5 5 5">
                            <materialDesign:PackIcon Kind="Search" Height="24" Width="24" />
                        </Button>
                    </Grid>

                    <GroupBox Grid.Row="1"
                              Header="Phiếu nhập thuốc" 
                              Margin="0 0 0 5"
                              Style="{DynamicResource MaterialDesignCardGroupBox}">
                        <ListView ItemsSource="{Binding List}"
                                  SelectedItem="{Binding SlectedItem, Mode=OneWayToSource}"
                                  x:Name="lstMedicationEntryList"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn 
                                        Header="STT" 
                                        DisplayMemberBinding="{Binding DisplayName}"/>
                                    <GridViewColumn 
                                        Header="Ngày" 
                                        DisplayMemberBinding="{Binding Unit.DisplayName}"/>
                                    <GridViewColumn 
                                        Header="Tổng tiền" 
                                        DisplayMemberBinding="{Binding Price}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                    <GroupBox Grid.Row="2"
                              Header="Chi tiết phiếu nhập thuốc" 
                              Margin="0 0 0 5"
                              Style="{DynamicResource MaterialDesignCardGroupBox}">
                        <ListView ItemsSource="{Binding List}"
                                  SelectedItem="{Binding SlectedItem, Mode=OneWayToSource}"
                                  x:Name="lstMedicationEntryDetail"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn 
                                        Header="STT" 
                                        DisplayMemberBinding="{Binding DisplayName}"/>
                                    <GridViewColumn
                                        Header="Thuốc"
                                        DisplayMemberBinding="{Binding Unit.DisplayName}"/>
                                    <GridViewColumn 
                                        Header="Đơn vị"
                                        DisplayMemberBinding="{Binding Price}"/>
                                    <GridViewColumn 
                                        Header="Số lượng"
                                        DisplayMemberBinding="{Binding Price}"/>
                                    <GridViewColumn 
                                        Header="Đơn giá" 
                                        DisplayMemberBinding="{Binding Price}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                    <Button Grid.Row="3"
                            x:Name="btnMedicationEntryListShow"
                            Command="{Binding AddMedicineCommand}"
                            Content="Nhập thuốc"
                            Width="110"
                            Margin="0 0 5 5"
                            HorizontalAlignment="Right" 
                            Background="#0078D7"
                            BorderBrush="#0078D7">  
                    </Button>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <!--<Grid.RowDefinitions>
